APP_NAME=GadoTech
APP_ENV=testing
APP_DEBUG=true
APP_URL=http://localhost:8080

APP_LOCALE=pt_BR
APP_FALLBACK_LOCALE=pt_BR
APP_FAKER_LOCALE=pt_BR

APP_MAINTENANCE_DRIVER=file

BCRYPT_ROUNDS=12

# ========================================
# Logging Configuration (Testes)
# ========================================
LOG_CHANNEL=single
LOG_LEVEL=error

# ========================================
# Database Configuration (PostgreSQL Testing)
# ========================================
DB_CONNECTION=pgsql
DB_HOST=postgres
DB_PORT=5432
DB_DATABASE=app_testing
DB_USERNAME=postgres
DB_PASSWORD=postgres

# ========================================
# Cache Configuration (Array for testing)
# ========================================
CACHE_DRIVER=array
CACHE_STORE=array

# ========================================
# Session Configuration (Array for testing)
# ========================================
SESSION_DRIVER=array
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# ========================================
# Queue Configuration (Sync for testing)
# ========================================
QUEUE_CONNECTION=sync

# ========================================
# Redis Configuration
# ========================================
REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# ========================================
# Mail Configuration (Testing)
# ========================================
MAIL_MAILER=array
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="no-reply@localhost"
MAIL_FROM_NAME="GadoTech"

# ========================================
# AWS Configuration (Optional)
# ========================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# ========================================
# Vite / Asset Configuration
# ========================================
VITE_APP_NAME="${APP_NAME}"
